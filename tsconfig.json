{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
     "paths": {
      "@monorepo/api": ["packages/api/src/index.ts"],
      "@monorepo/api/*": ["packages/api/src/*"],
      "@monorepo/types": ["packages/types/src/index.ts"],
      "@monorepo/types/*": ["packages/types/src/*"],
      "@monorepo/store": ["packages/store/src/index.ts"],
      "@monorepo/store/*": ["packages/store/src/*"],
      "@monorepo/design-tokens": ["packages/design-tokens/src/index.ts"],
      "@monorepo/design-tokens/*": ["packages/design-tokens/src/*"]
    }

  }
}
