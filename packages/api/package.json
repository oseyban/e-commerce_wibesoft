{
  "name": "@monorepo/api",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "codegen": "openapi-ts -i openapi.json -o src/generated",
    "prebuild": "pnpm run codegen",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.91.0",
    "@types/node": "^25.1.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.9.3"
  }
}
